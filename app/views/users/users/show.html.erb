<div class="wotitem profile-header">
    <%= render 'users/users/user' %>
</div>

<div>
  <div class="sub-navbar wotitem">
    <div>
      <%= link_to "Threads", user_path(@user, view: 'threads') %>
      <%= link_to "Comments", user_path(@user, view: 'comments') %>
      <%= link_to "Boosts", user_path(@user, view: 'boost') %>
    </div>
  </div>
</div>

<p> </p>

<body class="wotbody">
  <% if params[:view] == 'threads' %>
    <div class="sub-navbar wotitem">
     <div>
        <%= link_to "Top", sort_posts_path(sort_by: "top") %>
        <%= link_to "Newest", sort_posts_path(sort_by: "newest") %>
        <%= link_to "Commented", sort_posts_path(sort_by: "commented") %>
      </div>
    </div>
    <div id="posts">
      <% @posts.each do |post| %>
          <div>
              <%= render 'posts/post', post: post %>
          </div>
      <% end %>
    </div>
  <% elsif params[:view] == 'comments' %>
    <div id="comments">
      <% @comments.each do |comment| %>
          <div>
              <%= render 'comments/comment', comment: comment, post: comment.post %>
          </div>
      <% end %>
    </div>
  <% elsif params[:view] == 'boost' %>
  <div id="boosts">
    <% @boosted_posts.each do |post| %>
      <div>
        <%= render 'posts/post', post: post %>
      </div>
      <% end %>
  </div>
  <% end %>


</body>