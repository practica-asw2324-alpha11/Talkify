<div class="container">
    <h1><%= @magazine.name %></h1>
    <h2><%= @magazine.title %></h2>
    <strong><p>Description:</p></strong>
    <p><%= @magazine.description %></p>
    <strong><p>Rules:</p></strong>
    <p><%= @magazine.rules %></p>

    <div id="posts">
    <% @magazine.posts.each do |post| %>
      <% if post.id %>
        <%= render post %>
      <% end %>
    <% end %>
  </div>
</div>