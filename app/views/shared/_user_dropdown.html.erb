
<a href="#" class="dropdown-btn">
  <% if admin_signed_in? %>
    <a href="#" class="dropdown-btn">
      <i style="font-size: 18px; margin-left: -0.5rem; color: #fff;"></i><%= current_admin.full_name %>
    </a>
  <% else %>
    <%= link_to "Login", new_admin_session_path, class: "dropdown-btn" %>
  <% end %>


<div class="dropdown-content" style="top: 4.42rem; right: 0.5rem;">
  <% if admin_signed_in? %>
    <a href="<%= admin_path(current_admin) %>">Profile</a>
    <%= link_to "Logout", destroy_admin_session_path, method: :delete %>
    <a href="<%= edit_admin_path(current_admin) %>">Configuration</a>
  <% end %>
</div>
