<div class="wotitem">
  <div class="post-header">
    <div class="post-content" style="color: white;">

      <%= render 'admin' %>

    </div>
  </div>
</div>
<div>
  <div class="sub-navbar wotitem">
    <div>
      <%= link_to "Threads", admin_path(@admin, view: 'threads') %>
      <%= link_to "Comments", admin_path(@admin, view: 'comments') %>
      <%= link_to "Boosts", "#" %>
    </div>
  </div>
</div>
<p>  </p>
<div>
  <div class="sub-navbar wotitem">
   <div>
      <%= link_to "Top", sort_posts_path(sort_by: "top") %>
      <%= link_to "Newest", sort_posts_path(sort_by: "newest") %>
      <%= link_to "Commented", sort_posts_path(sort_by: "commented") %>
    </div>
  </div>
</div>

<body class="wotbody">
  <% if params[:view] == 'threads' %>
    <div id="posts">
      <% @posts.each do |post| %>
          <div>
              <%= render 'posts/post', post: post %>
          </div>
      <% end %>
    </div>
  <% elsif params[:view] == 'comments' %>
    <div id="comments">
      <% @comments.each do |comment| %>
          <div>
              <%= render 'comments/comment', comment: comment, post: comment.post %>
          </div>
      <% end %>
    </div>
  <% end %>


</body>





