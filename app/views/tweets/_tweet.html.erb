 <div class="wotitem" id=tweet.id>
    <div class="likes">
      <span class="numlikes" id="showLikes_<%= tweet.id %>"><%= tweet.likes %></span>
      <br>
      <span class="smallfont">
        people like this
        <span>
          <br>
          <h3>
            <% if session[:created_ids].nil? || !session[:created_ids].include?(tweet.id)%>
                <%= button_to 'Like', like_tweet_path(tweet), method: :put %>
            <% else %>
              <p class="destroy" >
              <%= button_to 'Destroy', tweet, method: :delete, data:{ confirm: "Are you sure?" } %>
              </p>
            <% end %>
          </h3>
          <br>
          </span>
        </span>

      </div>
      <div class="item">
        <h4>
          <em><%= tweet.author %></em>
           @ <%= tweet.created_at.strftime("%H:%M") %>
        </h4>
        <em><%= tweet.content %></em>
    </div>
    <br>
  </div>
</div>